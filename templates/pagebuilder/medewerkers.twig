<section class="mod-medewerkers bg-white">
	<div class="container">
		<div class="row">
			<div class="col-md-10 offset-md-1">
				{% if item.titel %}
					<h2> {{ item.titel }} </h2>
				{% endif %}
				{% if item.medewerkers %}
					<div class="row">
						{% for item in item.medewerkers %}
							<div class="col-md-4">
								<div class="medewerker text-center mb-5 mb-md-0">
									<div class="row">
										<div class="col-10 offset-1 col-md-12 offset-md-0">
											<div class="img-rounded bg-cover ratio-1x1 mb-4" style="background-image: url({{ Image(item.afbeelding).src }})">
											</div>
										</div>
									</div>
									<div class="text-blue mb-3">
										{{ item.titel }}
									</div>
									{{ item.tekst }}
								</div>
							</div>
						{% endfor %}
					</div>
				{% endif %}
			</div>
		</div>
	</div>
</section>