<section class="mod-businessunits {% if item.section_alt %} section-alt {% endif %} {{ item.kleur }}">
  <div class="container">
    <div class="row">
      <div class="col-lg-9 offset-lg-1">
        {% if item.titel_1 %}
          <h2> {{ item.titel_1 }} </h2>
        {% endif %}
        <div class="lead">{{ item.content }}</div>
        <br>
        <div class="row">
          <div class="col-md-6">
            {% if item.titel_2 %}
              <h3> {{ item.titel_2 }} </h3>
            {% endif %}
            {{ item.content_2 }}
          </div>
          <div class="col-md-6">
            {% if item.business_units %}
              <div class="businessunits">
                {% set delay = 0 %}
                {% for unit in item.business_units %}
                  <div class="unit">
                    <span class="stip"> </span>
                    <h5 data-aos="fade-left" data-aos-delay="{{delay}}" data-aos-easing="ease-in-sine" data-aos-duration="600"> 
	                    {% if unit.link_oranje_tekst %} 
	                      <a href="{{unit.link_oranje_tekst}}"> 
	                    {% endif %}
                      <span class="oranje"> {{ unit.oranje_tekst }} </span>
                      {% if unit.link_oranje_tekst %} 
	                      </a> 
	                    {% endif %}
                      <span class="blauw"> {{ unit.blauwe_tekst }} </span>
                    </h5>
                  </div>
                  {% if unit.link_oranje_tekst %} 
                    </a>
                  {% endif %}
                  {% set delay = delay + 100 %}
                {% endfor %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
</section>